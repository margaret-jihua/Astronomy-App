<div class="">
    <% if (apod.hdurl && apod.media_type === 'image') { %> 
        <img class="cover" src="<%= apod.hdurl %>" alt="astronomy picture of today" height="500">
    <% } else if (apod.url && apod.media_type === 'video') { %> 
        <iframe class="cover" src="<%= apod.url %>" height="500"></iframe>
    <% } else { %> 
        <img src="https://http.cat/204" alt="Cannot Find Content">
    <% } %> 
    <div class="above center">
        <span><%= apod.date %></span>
        <span><%= apod.title %></span>
    </div>
    
    <form method="GET" action="/detail">
        <input hidden type="date" id="date" name="date" value="<%= apod.date %>">
        <button type="submit">See More Information</button>
    </form>
    <form method="POST" action="/profile">
        <input hidden type="date" id="date" name="date" value="<%= apod.date %>">
        <% if (apod.hdurl) { %>
            <input hidden type="text" id="url" name="url" value="<%= apod.hdurl %>">
        <% } else { %> 
            <input hidden type="text" id="url" name="url" value="<%= apod.url %>">
        <% } %> 
        <button type="submit">Add to Favorite</button>
    </form>
</div>

<div class="row">
    <% gallery.forEach( g => { %>
        <div class="col l4 m6 s12">

            <% if (g.url && g.media_type === 'image') { %> 
                <img class="cover" src="<%= g.url %>" alt="<%= g.date %>" height="300">
            <% } else if (g.url && g.media_type === 'video') { %> 
                <iframe class="cover" src="<%= g.url %>" height="300"></iframe>
            <% } else { %> 
                <img class="cover" src="https://http.cat/204" alt="Cannot Find Content" height="300">
            <% } %>

            <div class="center">
                <p><%= g.date %></p>
                <p><%= g.title %></p>
                <form method="GET" action="/detail">
                    <input hidden type="date" id="date" name="date" value="<%= g.date %>">
                    <button class="gallery-btn btn waves-effect waves-light brown lighten-3" type="submit">See More Information</button>
                </form>
            </div>

        </div>
    <% }) %> 
</div>